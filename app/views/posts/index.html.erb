<% title "Posts" %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Update Username</th>
    <th>Create User Id</th>
    <th>Update User Id</th>
  </tr>
  <% for post in @posts %>
    <tr>
      <td><%= post.title %></td>
      <td><%= post.content %></td>
      <td><%= post.username %></td>
      <td><%= post.created_by %></td>
      <td><%= post.updated_by %></td>
      <td><%= link_to "Edit", edit_post_path(post) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Post", new_post_path %></p>
